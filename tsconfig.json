{
  "extends": ["@react-native/typescript-config", "@goatjs/typescript-config/base/tsconfig.json"],
  "compilerOptions": {
    "types": null,
    "noEmit": false,
    // "customConditions": ["react-native-strict-api"],
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "resolveJsonModule": true,
    "resolvePackageJsonImports": false,
    "allowImportingTsExtensions": false,
    "skipLibCheck": true,
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src", "tools", "vita.config.ts"]
}
